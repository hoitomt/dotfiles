[color]
	ui = true
[push]
	default = matching
[branch]
	autosetuprebase = always
[rerere]
	enabled = 1
[user]
	name = Michael Hoitomt
	email = mhoitomt@primedia.com
[core]
	excludesfile = /Users/hoitomt/.gitignore
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[alias]
	lg = log --oneline
[mergetool "opendiff"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	trustExitCode = true
[mergetool]
	tool = opendiff
	trustExitCode = true
[merge]
	tool = opendiff
